<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ffff"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.LoadingActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="@string/loading_page_title"
        android:textStyle="normal"
        android:textColorHighlight="@android:color/holo_blue_light"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="@dimen/loading_page_text_size"
        android:gravity="center_horizontal"
        android:layout_above="@+id/loading_pic"/>

    <ImageView
        android:id="@+id/loading_pic"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/loader_pic"
        />

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/loading_pic"/>

</RelativeLayout>
